@{
    ViewData["Title"] = "changePassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/daodiennguoidung/styleform.css" />
    <script src="~/daodiennguoidung/main.js"></script>
    <title>Đổi mật khẩu</title>
</head>
<body>
    <div class="mainDiv">
        <div class="cardStyle">
            <form asp-action="changePassword" method="post" asp-controller="Home" id="changePassword">

                <img src="" id="signupLogo" />

                <h2 class="formTitle">
                    Đổi mật khẩu
                </h2>
                <div class="inputDiv">
                    <label class="inputLabel" for="password">Mật khẩu cũ</label>
                    <input type="password" id="Password" name="Password" required>
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="password">Mật khẩu mới</label>
                    <input type="password" id="newPassword" name="newPassword" required>
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="confirmPassword">Nhập lại mật khẩu</label>
                    <input type="password" id="confirmPassword" name="confirmPassword">
                </div>

                <div class="buttonWrapper">
                    <button type="submit" id="submitButton" onclick="validateSignupForm()" class="submitButton pure-button pure-button-primary">
                        <span>Xác nhận</span>
                        <span id="loader"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

